extends ../layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/form.css")
    link(rel="stylesheet", href="/css/auth.css")

block content
    main
        if errorMessage
            each err in errorMessage
                div(class="user-message user-message--error") #{err.msg}
        form.login-form(action="/signup" method="POST")
            div.form-control
                label(for="email") E-Mail
                input(type="email" name="email" id="email" value=oldValue.email class=`${errorValues.find(er => er.param === "email" ) ? "inputError" : "inputText"}`)
            div.form-control
                label(for="password") Password
                input(type="password" name="password" id="password" value=oldValue.password class=`${errorValues.find(er => er.param === "password" ) ? "inputError" : "inputText"}`)
            div.form-control
                label(for="repassword") Confirm Password
                input(type="password" name="repassword" id="repassword" value=oldValue.repassword class=`${errorValues.find(er => er.param === "repassword" ) ? "inputError" : "inputText"}`)
            input(type="hidden" name="_csrf" value=csrfToken)
            button.btn(type="submit") Signup
